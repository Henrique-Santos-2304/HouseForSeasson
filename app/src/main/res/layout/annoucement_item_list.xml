<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_primary"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="9dp"
        app:strokeWidth="0.1dp"
        app:strokeColor="@color/white"
        app:cardElevation="1dp"
        android:backgroundTint="@color/bg_primary"
        android:alpha="0.8"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_primary"
            android:alpha="0.98"
            android:layout_margin="8dp"
            >
            <ImageView
                android:id="@+id/item_img_annoucement"
                android:layout_width="120dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                />

            <TextView
                android:id="@+id/item_title_announcement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/item_img_annoucement"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Casa por temporada"
                android:textStyle="bold|italic"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:id="@+id/item_description_announcement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/item_title_announcement"
                app:layout_constraintTop_toBottomOf="@id/item_title_announcement"
                app:layout_constraintStart_toStartOf="@id/item_title_announcement"
                android:text="Casa por temporada assadsdasdasdagora vai uma casa muito bacana de verdade "
                android:textSize="15sp"
                android:textColor="#E3DEDE"
                android:maxLines="3"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/item_date_announcement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/item_title_announcement"
                app:layout_constraintEnd_toEndOf="@id/item_title_announcement"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="22/03/2022 Ã s 15:34:22"
                android:textSize="16sp"
                android:textColor="#E3DEDE"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>